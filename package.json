{
  "name": "fast-case",
  "version": "0.1.0",
  "description": "A fast C++ library for camelcase and pascalcase",
  "author": "Jacob Gillespie <jacobwgillespie@gmail.com>",
  "homepage": "https://github.com/jacobwgillespie/fast-case",
  "repository": "git://github.com/jacobwgillespie/fast-case.git",
  "license": "MIT",
  "main": "dist/fastCase.js",
  "module": "dist/fastCase.mjs",
  "source": "src/index.mjs",
  "files": [
    "dist",
    "binding.gyp",
    "package.json",
    "LICENSE"
  ],
  "scripts": {
    "install": "prebuild-install || node-gyp rebuild",
    "rebuild": "prebuild --compile",
    "prebuild": "prebuild --all --strip --verbose",
    "format": "prettier --write './src/**/*.{js,mjs}' && clang-format -i src/fast-case.cc src/algorithms.hpp",
    "benchmark": "node support/benchmark.js",
    "build": "microbundle",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "prepublish": "npm run clean && npm run build",
    "test": "ava"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "dependencies": {
    "bindings": "^1.3.0",
    "nan": "^2.9.2",
    "prebuild-install": "^2.5.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "benchmark": "^2.1.4",
    "clang-format": "^1.2.2",
    "humps": "^2.0.1",
    "microbundle": "^0.4.4",
    "prebuild": "^7.4.0",
    "prebuild-ci": "^2.2.3",
    "prettier": "^1.11.1",
    "xcase": "^2.0.1"
  }
}
